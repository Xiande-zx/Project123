<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmpMenu">


    <EditText
        android:id="@+id/buscador1"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="378dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittextredondos"
        android:drawableLeft="@android:drawable/ic_search_category_default"
        android:ems="10"
        android:hint="@string/edittextBuscadorServicios"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button11" />

    <ListView
        android:id="@+id/lista1"
        android:layout_width="382dp"
        android:layout_height="504dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="5dp"
        android:focusableInTouchMode="false"
        android:isScrollContainer="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buscador1" />

    <Button
        android:id="@+id/button11"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_marginStart="324dp"
        android:layout_marginLeft="324dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_dos_ripple_user"
        android:drawableBottom="@drawable/user4"
        android:textColor="#17202A"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button16"
        android:layout_width="253dp"
        android:layout_height="50dp"
        android:layout_marginStart="144dp"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_dos_ripple"
        android:text="@string/buttonNuevoServicio"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lista1" />

</androidx.constraintlayout.widget.ConstraintLayout>